{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "align": [
      true,
      "statements"
    ],
    "array-type": false,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "arrow-return-shorthand": true,
    "await-promise": true,
    "ban": [
      true,
      {
        "message": "Don't focus tests",
        "name": "fdescribe"
      },
      {
        "message": "Don't focus tests",
        "name": "fit"
      },
      {
        "message": "Don't ignore tests",
        "name": "xdescribe"
      },
      {
        "message": "Don't ignore tests",
        "name": "xit"
      }
    ],
    "ban-comma-operator": true,
    "binary-expression-operand-order": true,
    "component-class-suffix": true,
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "contextual-decorator": true,
    "contextual-lifecycle": true,
    "curly": true,
    "deprecation": {
      "severity": "warning"
    },
    "directive-class-suffix": true,
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "eofline": true,
    "function-constructor": true,
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "import-spacing": true,
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      140
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "no-boolean-literal-compare": false,
    "no-conflicting-lifecycle": true,
    "no-consecutive-blank-lines": false,
    "no-console": [
      true,
      "log",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-duplicate-imports": [
      true,
      {
        "allow-namespace-imports": true
      }
    ],
    "no-duplicate-switch-case": true,
    "no-dynamic-delete": true,
    "no-empty": false,
    "no-eval": true,
    "no-forward-ref": true,
    "no-host-metadata-property": true,
    "no-inferrable-types": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-internal-module": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-lifecycle-call": true,
    "no-non-null-assertion": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "no-pipe-impure": true,
    "no-redundant-jsdoc": true,
    "no-reference": true,
    "no-require-imports": true,
    "no-return-await": true,
    "no-sparse-arrays": true,
    "no-string-literal": false,
    "no-switch-case-fall-through": true,
    "no-tautology-expression": true,
    "no-this-assignment": true,
    "no-unbound-method": [
      true,
      {
        "allow-typeof": true,
        "ignore-static": true
      }
    ],
    "no-unused-expression": false,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "ordered-imports": false,
    "prefer-for-of": true,
    "prefer-object-spread": true,
    "prefer-output-readonly": true,
    "prefer-switch": [
      true,
      {
        "min-cases": 3
      }
    ],
    "prefer-template": true,
    "promise-function-async": true,
    "quotemark": [
      true,
      "single"
    ],
    "restrict-plus-operands": true,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    ],
    "space-within-parens": {
      "type": "number",
      "min": 0
    },
    "static-this": true,
    "switch-default": true,
    "template-banana-in-box": true,
    "template-no-call-expression": false,
    "template-no-negated-async": true,
    "template-use-track-by-function": false,
    "trailing-comma": false,
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ],
    "unified-signatures": true,
    "unnecessary-bind": true,
    "unnecessary-else": [
      true,
      {
        "allow-else-if": true
      }
    ],
    "use-component-selector": true,
    "use-injectable-provided-in": true,
    "use-lifecycle-interface": true,
    "use-pipe-decorator": true,
    "use-pipe-transform-interface": true,
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "rulesDirectory": [
    "codelyzer"
  ]
}
